<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BeHealthy_Java" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/ripple_color</item>
        <item name="hintTextColor">@color/ripple_color</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <style name="TextForUser" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:textColor">@color/ripple_pink</item>
        <item name="fontFamily">@font/montserrat_alternates_fat</item>
        <item name="android:layout_margin">50dp</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>